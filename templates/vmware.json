{
  "min_packer_version": "0.10.0",
  "description": "",

  "variables": {
    "namespace": "ebi",
    "vm_name": null,
    "version": "0.0.0",

    "os_name": null,
    "os_version": null,
    "iso": null,
    "iso_checksum": null,

    "headless": "true",
    "iso_server": "http://jaca.ebi.ac.uk/~luisg/gsi",
    "ks_server": "http://jaca.ebi.ac.uk/~luisg/gsi"
  },

  "builders": [
    {
      "type": "vmware-iso",
      "headless": "{{user `headless`}}",
      "output_directory": "artifacts/{{user `version`}}/{{user `vm_name`}}/vmware",
      "vm_name": "{{user `vm_name`}}",
      "format": "ova",

      "disk_size": "5000",

      "iso_url": "{{user `iso_server`}}/isos/{{user `os_name`}}/{{user `os_version`}}/{{user `iso`}}.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_checksum`}}",

      "guest_os_type": "rhel7-64",
      "tools_upload_flavor": "",

      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_timeout": "10m",

      "shutdown_command": "shutdown -P now",

      "http_directory": "",
      "boot_command": [
        "<tab> ks={{user `ks_server`}}/ks.php?machine=packer&os={{user `os_name`}}-{{user `os_version`}} selinux=0<enter><wait>"
      ],

      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible/vmware.yml",
      "sftp_command": "/usr/libexec/openssh/sftp-server -e",
      "user": "root",
      "extra_arguments": [ "-v" ]
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zero.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "artifacts/{{user `version`}}/{{user `vm_name`}}/vmware/{{user `vm_name`}}.box"
    }
  ]
}
