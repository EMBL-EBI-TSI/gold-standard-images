{
  "min_packer_version": "0.10.0",
  "description": "Create a vagrant box from a Virtualbox OVA",

  "variables": {
    "namespace": "ebi",
    "vm_name": null,
    "version": "0.0.0",

    "headless": "true"
  },

  "builders": [
    {
      "type": "virtualbox-ovf",
      "headless": "{{user `headless`}}",
      "output_directory": "artifacts/{{user `version`}}/virtualbox",
      "vm_name": "{{user `vm_name`}}",
      "format": "ova",

      "source_path": "artifacts/{{user `version`}}/base/{{user `vm_name`}}.ova",

      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",

      "ssh_username": "root",
      "ssh_private_key_file": "keys/packer",
      "ssh_timeout": "10m",

      "shutdown_command": "shutdown -P now"
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible/virtualbox.yml",
      "sftp_command": "/usr/libexec/openssh/sftp-server -e",
      "user": "root",
      "extra_arguments": [ "-v" ]
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}'",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zero.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "artifacts/{{user `version`}}/virtualbox/{{user `vm_name`}}.box"
    }
  ]
}
